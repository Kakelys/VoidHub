{
  "ConnectionStrings": {
    "ForumDb": "Host=host;Port=5432;Database=ForumDb;Username=postgres;Password="
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Issuer": "http://host:port",
    "Audience": "http://host:port",
    "AccessSecret": "your_super_cool_and_secret_secret",
    "RefreshSecret": "your_super_cool_and_secret_secret",
    "AccessLifetimeInMinutes": 60,
    "RefreshLifetimeInMinutes": 43200,
    "MaxTokenCount": 5
  },
  "Image": {
    "Folder": "wwwroot",
    "AvatarFolder": "images/avatars",
    "PostImageFolder": "images/posts",
    "AvatarDefault": "default.png",
    "ResizeWidth": 256,
    "ResizeHeight": 256,
    "ResizePostWidth": 512,
    "ResizePostheight": 512,
    "ImageMaxSize": 1048576,
    "FileType": ".png"
  },
  "Clients": [
    "http://localhost:4200",
    "htts://localhost:4200"
  ],
  "AllowedHosts": "*"
}
